---
const {
  // title,
  segment
} = Astro.props

const pages = [
  'work',
  'sketchbook',
  'about',
  'contact'
]
---

<style>
  header {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    border-bottom: 1px solid #FF8887;
    padding: var(--gap);
  }

  a[href='#content'] {
    width: 100%;
    text-align: center;
    color: var(--colorBackground);
    background: var(--colorPrimary);
    position: absolute;
    z-index: 1000;
    top: -3rem;
    left: 0;
    right: 0;
    font-size: 1rem;
    padding: .5rem;
    line-height: 2rem;
    transition: var(--transition);
  }

  a[href='#content']:focus {
    top: 0;
  }

  .logo {
    height: 5rem;
    width: auto;
    position: relative;
    z-index: 2;
  }

  nav {
    position: absolute;
    z-index: 1;
    left: var(--gap);
    right: var(--gap);
  }

  ul {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  ul:after {
    content: '';
    display: block;
    flex: 1;
    order: 3;
  }

  li[data-segment="work"] {
    order: 1;
  }

  li[data-segment="sketchbook"] {
    order: 2;
  }

  li[data-segment="about"] {
    order: 4;
  }

  li[data-segment="contact"] {
    order: 5;
  }

  .active {
    color: pink;
  }
</style>
  
<header>
  <a href="#content">skip to content</a>
  <a href="/">
    <h1 class="screenreader">Gabby Windham | {segment}</h1>
    <img class="logo" src="/images/logo.svg" alt="gabbywindham logo">
  </a>
  <nav>
    <ul>
      {pages.map(page => (
        <li data-segment={page}>
          <a
            href={`/${page}`}
            class={segment === page && 'active'}
          >
            {page}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>